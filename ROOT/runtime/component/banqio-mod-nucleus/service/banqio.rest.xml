            </resource>
            <resource name="weekend">
                <method type="get">
                    <service name="banqio.basic.BasicServices.find#CurrencyWeekend"/>
                </method>
                <method type="post">
                    <service name="banqio.basic.BasicServices.create#CurrencyWeekend"/>
