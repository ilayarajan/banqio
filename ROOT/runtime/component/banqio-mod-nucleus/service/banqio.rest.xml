<?xml version="1.0" encoding="UTF-8"?>
<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-2.1.xsd"
          name="nucleus"
          displayName="Nucleus REST API"
          version="1.0.0">

    <resource name="security" description="Security API" version="1.0.0">
        <resource name="user">
            <method type="get">
                <service name="banqio.security.SecurityServices.find#User"/>
            </method>
            <method type="post">
                <service name="banqio.security.SecurityServices.create#User"/>
            </method>
            <method type="patch">
                <service name="banqio.security.SecurityServices.update#User"/>
            </method>
            <id name="userId">
                <resource name="membership">
                    <method type="get">
                        <service name="banqio.security.SecurityServices.find#UserGroupMember"/>
                    </method>
                    <method type="post">
                        <service name="banqio.security.SecurityServices.create#UserGroupMember"/>
                    </method>
                    <method type="delete">
                        <service name="banqio.security.SecurityServices.expire#UserGroupMember"/>
                    </method>
                </resource>
                <resource name="acl">
                    <method type="get">
                        <service name="banqio.security.SecurityServices.find#UserAcl"/>
                    </method>
                    <method type="post">
                        <service name="banqio.security.SecurityServices.create#UserAcl"/>
                    </method>
                    <method type="patch">
                        <service name="banqio.security.SecurityServices.position#UserAcl"/>
                    </method>
                    <method type="delete">
                        <service name="banqio.security.SecurityServices.expire#UserAcl"/>
                    </method>
                </resource>
                <resource name="approve">
                    <method type="post">
                        <service name="banqio.security.SecurityServices.approve#User"/>
                    </method>
                </resource>
                <resource name="enable">
                    <method type="post">
                        <service name="banqio.security.SecurityServices.enable#User"/>
                    </method>
                </resource>
                <resource name="disable">
                    <method type="post">
                        <service name="banqio.security.SecurityServices.disable#User"/>
                    </method>
                </resource>
                <resource name="password">
                    <resource name="reset">
                        <method type="post">
                            <service name="banqio.security.SecurityServices.reset#PasswordInternal"/>
                        </method>
                    </resource>
                </resource>
                <resource name="logout">
                    <method type="post">
                        <service name="banqio.security.SecurityServices.forceLogout#User"/>
                    </method>
                </resource>
            </id>
            <resource name="register" require-authentication="anonymous-all">
                <method type="post">
                    <service name="banqio.security.SecurityServices.register#User"/>
                </method>
            </resource>
            <resource name="profile">
                <method type="get">
                    <service name="banqio.security.SecurityServices.find#UserProfile"/>
                </method>
                <method type="post">
                    <service name="banqio.security.SecurityServices.update#UserProfile"/>
                </method>
            </resource>
            <resource name="login">
                <method type="post">
                    <service name="banqio.security.SecurityServices.login#User"/>
                </method>
            </resource>
            <resource name="authenticate">
                <method type="post">
                    <service name="banqio.security.SecurityServices.authenticate#User"/>
                </method>
            </resource>
            <resource name="logout">
                <method type="post">
                    <service name="banqio.security.SecurityServices.logout#User"/>
                </method>
            </resource>
            <resource name="poll">
                <method type="get">
                    <service name="banqio.security.SecurityServices.poll#UserSession"/>
                </method>
            </resource>
            <resource name="password">
                <resource name="reset" require-authentication="anonymous-all">
                    <method type="post">
                        <service name="banqio.security.SecurityServices.reset#Password"/>
                    </method>
                </resource>
                <resource name="temporary" require-authentication="anonymous-all">
                    <resource name="change">
                        <method type="post">
                            <service name="banqio.security.SecurityServices.change#TemporaryPassword"/>
                        </method>
                    </resource>
                </resource>
                <resource name="change">
                    <method type="post">
                        <service name="banqio.security.SecurityServices.change#Password"/>
                    </method>
                </resource>
                <resource name="oneTime">
                    <resource name="generate">
                        <method type="post">
                            <service name="commons.security.SecurityServices.generate#OneTimePassword"/>
                        </method>
                    </resource>
                </resource>
            </resource>
            <resource name="preference">
                <method type="get">
                    <service name="banqio.security.SecurityServices.find#UserPreference"/>
                </method>
            </resource>
            <resource name="language">
                <method type="post">
                    <service name="banqio.security.SecurityServices.update#UserLanguage"/>
                </method>
            </resource>
            <resource name="otpChannel">
                <method type="post">
                    <service name="banqio.security.SecurityServices.update#UserOtpChannel"/>
                </method>
            </resource>
            <resource name="event">
                <method type="get">
                    <service name="banqio.security.SecurityServices.find#UserEvent"/>
                </method>
            </resource>
            <resource name="stats">
                <method type="get">
                    <service name="banqio.security.SecurityServices.find#UserStats"/>
                </method>
            </resource>
        </resource>
        <resource name="userGroup">
            <method type="get">
                <service name="banqio.security.SecurityServices.find#UserGroup"/>
            </method>
            <method type="post">
                <service name="banqio.security.SecurityServices.create#UserGroup"/>
            </method>
            <method type="patch">
                <service name="banqio.security.SecurityServices.update#UserGroup"/>
            </method>
            <id name="userGroupId">
                <resource name="member">
                    <method type="get">
                        <service name="banqio.security.SecurityServices.find#UserGroupMember"/>
                    </method>
                    <method type="post">
                        <service name="banqio.security.SecurityServices.create#UserGroupMember"/>
                    </method>
                    <method type="delete">
                        <service name="banqio.security.SecurityServices.expire#UserGroupMember"/>
                    </method>
                </resource>
                <resource name="acl">
                    <method type="get">
                        <service name="banqio.security.SecurityServices.find#UserGroupAcl"/>
                    </method>
                    <method type="post">
                        <service name="banqio.security.SecurityServices.create#UserGroupAcl"/>
                    </method>
                    <method type="patch">
                        <service name="banqio.security.SecurityServices.position#UserGroupAcl"/>
                    </method>
                    <method type="delete">
                        <service name="banqio.security.SecurityServices.expire#UserGroupAcl"/>
                    </method>
                </resource>
                <resource name="workflowInitiator">
                    <method type="get">
                        <service name="banqio.security.SecurityServices.find#UserGroupWorkflowInitiator"/>
                    </method>
                </resource>
            </id>
        </resource>
    </resource>

