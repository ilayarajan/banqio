<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Find User Group"
        default-menu-include="false">

    <transition name="createUserGroup">
        <service-call name="create#moqui.security.UserGroup"/>
        <default-response url="."/>
    </transition>
    <transition name="editUserGroup">
        <default-response url="../EditUserGroup"/>
    </transition>

    <actions>
        <entity-find entity-name="moqui.security.UserGroup" list="groupList">
            <search-form-inputs default-order-by="^userGroupId"/>
            <econdition field-name="groupTypeEnumId" operator="like" value="BNQ_%"/>
        </entity-find>
    </actions>

    <widgets>
        <container-box>
            <box-header>
                <label text="Find User Group" type="h5"/>
            </box-header>
            <box-toolbar>
                <container-dialog id="CreateGroupContainer" button-text="New User Group" width="1000">
                    <form-single name="CreateGroupForm" transition="createUserGroup">
                        <auto-fields-entity entity-name="moqui.security.UserGroup" field-type="edit">
                            <exclude field-name="userGroupId"/>
                            <exclude field-name="ipAllowed"/>
                        </auto-fields-entity>
                        <field name="description">
                            <default-field title="Group Name">
                                <text-line size="60"/>
                            </default-field>
                        </field>
                        <field name="groupTypeEnumId">
                            <default-field title="Group Type">
                                <drop-down>
                                    <entity-options text="${description}" key="${enumId}">
                                        <entity-find entity-name="moqui.basic.Enumeration">
                                            <econdition field-name="enumTypeId" value="UserGroupType"/>
                                            <econdition field-name="enumId" operator="like" value="BNQ_%"/>
                                        </entity-find>
                                    </entity-options>
                                </drop-down>
                            </default-field>
                        </field>
                        <field name="submitBtn">
                            <default-field title="Create">
                                <submit/>
                            </default-field>
                        </field>

                        <field-layout>
                            <fields-not-referenced/>
                        </field-layout>
                    </form-single>
                </container-dialog>
            </box-toolbar>
            <box-body>
                <form-list name="ListGroups" list="groupList" skip-form="true" header-dialog="true" select-columns="true">
                    <field name="userGroupId">
                        <header-field show-order-by="true" title="ID">
                            <text-find hide-options="true" size="10"/>
                        </header-field>
                        <default-field>
                            <link url="editUserGroup" text="${userGroupId}"/>
                        </default-field>
                    </field>
                    <field name="description">
                        <header-field show-order-by="true" title="Group Name">
                            <text-find hide-options="true"/>
                        </header-field>
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="find">
                        <header-field title="Find">
                            <submit icon="glyphicon glyphicon-search"/>
                        </header-field>
                    </field>

                    <form-list-column>
                        <field-ref name="userGroupId"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="description"/>
                    </form-list-column>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>
