<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns=""
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Scenes"
        default-menu-index="5">

    <parameter name="appId" required="true"/>

    <transition name="createScene">
        <service-call name="create#commons.server.Scene" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="editScene">
        <default-response url="../../Scene/EditScene">
            <parameter name="sceneId" from="sceneId"/>
            <parameter name="appId" from="appId"/>
        </default-response>
    </transition>

    <actions>
        <entity-find entity-name="commons.server.SceneDetail" list="sceneList">
            <search-form-inputs default-order-by="^sceneId"/>
            <econdition field-name="appId" from="appId"/>
        </entity-find>
    </actions>

    <widgets>
        <container-box>
            <box-header>
                <label text="Find Scene" type="h5"/>
            </box-header>
            <box-toolbar>
                <container-dialog id="CreateSceneContainer" button-text="New Scene" width="900">
                    <form-single name="CreateSceneForm" transition="createScene">
                        <auto-fields-entity entity-name="commons.server.Scene" field-type="edit">
                            <exclude field-name="sceneId"/>
                            <exclude field-name="creationDate"/>
                            <exclude field-name="inputUserId"/>
                            <exclude field-name="updateUserId"/>
                        </auto-fields-entity>
                        <field name="appId">
                            <default-field>
                                <hidden/>
                            </default-field>
                        </field>
                        <field name="submitBtn">
                            <default-field title="Create">
                                <submit/>
                            </default-field>
                        </field>

                        <field-layout>
                            <field-ref name="sceneName"/>
                            <fields-not-referenced/>
                        </field-layout>
                    </form-single>
                </container-dialog>
            </box-toolbar>
            <box-body>
                <form-list name="ListScenes" list="sceneList" skip-form="true" header-dialog="true" select-columns="true">
                    <field name="appId">
                        <header-field>
                            <hidden/>
                        </header-field>
                        <default-field>
                            <hidden/>
                        </default-field>
                    </field>
                    <field name="sceneId">
                        <header-field show-order-by="true" title="ID">
                            <text-find hide-options="true" size="10"/>
                        </header-field>
                        <default-field>
                            <link url="editScene" text="${sceneId}"/>
                        </default-field>
                    </field>
                    <field name="sceneName">
                        <header-field show-order-by="true">
                            <text-find hide-options="true"/>
                        </header-field>
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="lookupName">
                        <header-field show-order-by="true">
                            <text-find hide-options="true"/>
                        </header-field>
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="find">
                        <header-field title="Find">
                            <submit icon="glyphicon glyphicon-search"/>
                        </header-field>
                    </field>

                    <form-list-column>
                        <field-ref name="sceneId"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="sceneName"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="lookupName"/>
                    </form-list-column>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>