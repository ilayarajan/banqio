<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns=""
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Servers"
        default-menu-index="2">

    <parameter name="appId" required="true"/>

    <transition name="createServer">
        <service-call name="create#commons.server.AppServer" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="editServer">
        <default-response url="../EditAppServer">
            <parameter name="serverId" from="serverId"/>
            <parameter name="appId" from="appId"/>
        </default-response>
    </transition>

    <actions>
        <entity-find entity-name="commons.server.AppServer" list="serverList">
            <search-form-inputs default-order-by="^serverId"/>
        </entity-find>
    </actions>

    <widgets>
        <container-box>
            <box-header>
                <label text="Find Server" type="h5"/>
            </box-header>
            <box-toolbar>
                <container-dialog id="CreateServerContainer" button-text="New Server" width="900">
                    <form-single name="CreateServerForm" transition="createServer">
                        <auto-fields-entity entity-name="commons.server.AppServer" field-type="edit">
                            <exclude field-name="serverId"/>
                            <exclude field-name="inputUserId"/>
                            <exclude field-name="updateUserId"/>
                            <exclude field-name="creationDate"/>
                        </auto-fields-entity>
                        <field name="appId">
                            <default-field>
                                <hidden/>
                            </default-field>
                        </field>
                        <field name="ipAddress">
                            <default-field title="IP Address">
                                <text-line size="20"/>
                            </default-field>
                        </field>
                        <field name="disabled">
                            <default-field>
                                <drop-down>
                                    <option key="N" text="No"/>
                                    <option key="Y" text="Yes"/>
                                </drop-down>
                            </default-field>
                        </field>
                        <field name="submitBtn">
                            <default-field title="Create">
                                <submit/>
                            </default-field>
                        </field>

                        <field-layout>
                            <fields-not-referenced/>
                        </field-layout>
                    </form-single>
                </container-dialog>
            </box-toolbar>
            <box-body>
                <form-list name="ListServers" list="serverList" skip-form="true" header-dialog="true" select-columns="true">
                    <field name="appId">
                        <header-field>
                            <hidden/>
                        </header-field>
                        <default-field>
                            <hidden/>
                        </default-field>
                    </field>
                    <field name="serverId">
                        <header-field show-order-by="true" title="ID">
                            <text-find hide-options="true" size="10"/>
                        </header-field>
                        <default-field>
                            <link url="editServer" text="${serverId}"/>
                        </default-field>
                    </field>
                    <field name="hostName">
                        <header-field show-order-by="true">
                            <text-find hide-options="true"/>
                        </header-field>
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="nodeName">
                        <header-field show-order-by="true">
                            <text-find hide-options="true"/>
                        </header-field>
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="ipAddress">
                        <header-field show-order-by="true">
                            <text-find hide-options="true"/>
                        </header-field>
                        <default-field title="IP Address">
                            <display/>
                        </default-field>
                    </field>
                    <field name="port">
                        <header-field show-order-by="true">
                            <text-find hide-options="true"/>
                        </header-field>
                        <default-field>
                            <display format="#"/>
                        </default-field>
                    </field>
                    <field name="disabled">
                        <header-field show-order-by="true">
                            <drop-down allow-empty="true">
                                <option key="Y" text="Yes"/>
                                <option key="N" text="No"/>
                            </drop-down>
                        </header-field>
                        <default-field>
                            <display/>
                        </default-field>
                    </field>
                    <field name="find">
                        <header-field title="Find">
                            <submit icon="glyphicon glyphicon-search"/>
                        </header-field>
                    </field>

                    <form-list-column>
                        <field-ref name="serverId"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="hostName"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="nodeName"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="ipAddress"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="port"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="disabled"/>
                    </form-list-column>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>